<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/blanco</item>
        <item name="android:colorForeground">@color/grisTexto</item>
        <item name="android:textColor">@color/grisTexto</item>
        <item name="actionMenuTextColor">@color/grisTexto</item>
        <item name="titleTextColor">@color/grisTexto</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#D60000</item>
        <item name="android:colorForeground">@color/grisTexto</item>
        <item name="android:textColor">@color/grisTexto</item>
        <item name="actionMenuTextColor">@color/grisTexto</item>
        <item name="titleTextColor">@color/grisTexto</item>
    </style>


    <style name="AppTheme.DarkTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="backgroundColor">#303030</item>
        <item name="android:textColorHighlight">#80D60000</item>
        <item name="android:textColor">@color/grisTexto_DarkTheme</item>
        <item name="actionMenuTextColor">@color/grisTexto_DarkTheme</item>
        <item name="titleTextColor">@color/grisTexto_DarkTheme</item>
    </style>

</resources>
